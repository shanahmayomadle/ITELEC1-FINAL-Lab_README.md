```kotlin+java/.../.../MainActivity
package com.lifecyclesample.labexercises

import android.os.Bundle
import android.widget.Toast
import androidx.appcompat.app.AppCompatActivity
import com.lifecyclesample.labexercises.databinding.ActivityMainBinding

class MainActivity : AppCompatActivity() {

    private lateinit var binding: ActivityMainBinding

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        binding = ActivityMainBinding.inflate(layoutInflater)
        setContentView(binding.root)

        // Standard Button
        binding.btnStandard.setOnClickListener {
            Toast.makeText(this, R.string.toast_standard, Toast.LENGTH_SHORT).show()
        }

        // ImageButton
        binding.ibFavorite.setOnClickListener {
            Toast.makeText(this, R.string.toast_image, Toast.LENGTH_SHORT).show()
        }

        // ToggleButton
        binding.tbSwitch.setOnCheckedChangeListener { _, isChecked ->
            val message = if (isChecked) R.string.toast_on else R.string.toast_off
            Toast.makeText(this, message, Toast.LENGTH_SHORT).show()
        }
    }
}




```res/layout/activity_main.xml
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/btnStandard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:minHeight="48dp"
        android:text="@string/btn_click_me"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibFavorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/desc_favorite"
        android:minHeight="48dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnStandard" />

    <ToggleButton
        android:id="@+id/tbSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:minHeight="48dp"
        android:textOff="@string/tb_off"
        android:textOn="@string/tb_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ibFavorite" />

</androidx.constraintlayout.widget.ConstraintLayout>




```res/values/strings.xml
<resources>
    <string name="app_name">Lab Exercises</string>
    <string name="btn_click_me">Click Me!</string>
    <string name="tb_on">ON</string>
    <string name="tb_off">OFF</string>
    <string name="desc_favorite">Add to favorites</string>

    <!-- Toast messages -->
    <string name="toast_standard">Standard Button Clicked!</string>
    <string name="toast_image">ImageButton Clicked!</string>
    <string name="toast_on">Toggle is ON</string>
    <string name="toast_off">Toggle is OFF</string>
</resources>




```manifests/AndroidManifest.xml
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lifecyclesample.labexercises">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>




